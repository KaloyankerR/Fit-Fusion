@page "{Id}"
@model FitFusionWeb.Pages.Products.ProductModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="product-details-container">
    <div class="product-image">
        <img src="@Model.ProductView.ImageUrl" alt="Product Image" />
    </div>

    <div class="product-info">
        <h2>@Model.ProductView.Title</h2>

        <div class="product-description">
            <p>Description: @Model.ProductView.Description</p>
        </div>

        <div class="product-details">
            <p>Price: @Model.ProductView.Price $</p>
            <span>Category:</span>
            <p class="category">@Model.ProductView.Category.ToString()</p>
        </div>
    </div>
</div>