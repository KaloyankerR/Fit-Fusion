@page "{Id}"
@using Models.Product;
@model FitFusionWeb.Pages.Products.UpdateModel
@{
    ViewData["Title"] = "Product Update";
}

<h1>Update Product</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div>
        <input asp-for="Product.Id" type="hidden" class="form-control" />
    </div>
    <div>
        <label asp-for="Product.Title"></label>
        <input asp-for="Product.Title" class="form-control" />
    </div>
    <div>
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" />
    </div>
    <div>
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" class="form-control" />
    </div>
    <div>
        <label asp-for="Product.Category"></label>
        <select asp-for="Product.Category" class="form-control">
            @foreach (var category in Enum.GetValues(typeof(Category)))
            {
                <option value="@category" selected="@Model.Product.Category == category">@category</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Product.Hashtags"></label>
        <select asp-for="Product.Hashtags" class="form-control" multiple>
            @foreach (Hashtag hashtag in Enum.GetValues(typeof(Hashtag)))
            {
                <option value="@hashtag" selected="@Model.Product.Hashtags.Contains(hashtag)">@hashtag</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="Product.ImageUrl"></label>
        <input asp-for="Product.ImageUrl" class="form-control" />
    </div>

    <div>
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
