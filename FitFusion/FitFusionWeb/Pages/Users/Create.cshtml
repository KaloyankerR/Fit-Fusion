@page
@model FitFusionWeb.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<h2>Create User</h2>

<form method="post">
    <select id="userRole" onchange="userCreation()">
        <option>Choose your role</option>
        <option value="Owner">Owner</option>
        <option value="Staff">Staff</option>
        <option value="Customer">Customer</option>
    </select>

    <div class="container">
        <div id="userAttributes">
            <input asp-for="UserForm.Id" type="hidden" class="form-control" />

            <label asp-for="UserForm.FirstName">First Name</label>
            <input asp-for="UserForm.FirstName" class="form-control" />
            <span asp-validation-for="UserForm.FirstName" class="text-danger"></span>

            <label asp-for="UserForm.LastName">Last Name</label>
            <input asp-for="UserForm.LastName" class="form-control" />
            <span asp-validation-for="UserForm.LastName" class="text-danger"></span>

            <label asp-for="UserForm.Email">Email</label>
            <input asp-for="UserForm.Email" class="form-control" />
            <span asp-validation-for="UserForm.Email" class="text-danger"></span>

            <label asp-for="UserForm.PasswordHash">Password</label>
            <input asp-for="UserForm.PasswordHash" class="form-control" />
            <span asp-validation-for="UserForm.PasswordHash" class="text-danger"></span>

            <label asp-for="UserForm.Address">Address</label>
            <input asp-for="UserForm.Address" class="form-control" />
            <span asp-validation-for="UserForm.Address" class="text-danger"></span>

            <div id="additionalAttributes" style="display:none;">
                <label for="phone">Phone</label>
                <input id="phone" />
                <!-- Add validation message for phone if needed -->
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-warning">Create User</button>
</form>

@section Scripts
    {
    <script>
        function userCreation() {
            var role = document.getElementById("userRole").value;

            var phoneField = document.getElementById("additionalAttributes");

            if (role === "Owner" || role === "Staff") {
                phoneField.style.display = "block";
            } else {
                phoneField.style.display = "none";
            }
        }
    </script>
}
