@page
@model FitFusionWeb.Pages.Authentication.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="grid-x">
    <div class="cell">
        <article class="card">
            <div class="card-body">
                <h2 class="card-title">Customer Registration</h2>

                <form method="post">
                    <div>
                        <input asp-for="Customer.Id" type="hidden" class="form-control" value="0" />
                        <input asp-for="Customer.PasswordSalt" type="hidden" class="form-control" value="" />
                        <input asp-for="Customer.NutriPoints" type="hidden" class="form-control" value="0" />
                    </div>
                    <div>
                        <label asp-for="Customer.FirstName"></label>
                        <input asp-for="Customer.FirstName" class="form-control" />
                        <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Customer.LastName"></label>
                        <input asp-for="Customer.LastName" class="form-control" />
                        <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Customer.Email"></label>
                        <input asp-for="Customer.Email" class="form-control" />
                        <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Customer.PasswordHash">Password</label>
                        <input asp-for="Customer.PasswordHash" class="form-control" />
                        <span asp-validation-for="Customer.PasswordHash" class="text-danger"></span>
                    </div>
                    <div>
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </article>
    </div>
</div>